<!DOCTYPE html>
<html lang="PT-BR">
<head>
  <title>Fatura</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/styles.css">  
</head>
<body>

<div class="container mt-3">
  <h2>Fatura</h2>
  <hr>
  <div class="btn-group">
  <form action="/Fatura/Click" method="post">
      <a href="/Menu" class="btn btn-info">Inicio</a>
  </div>
</div>

<div class="container mt-3">
  <nav class="navbar navbar-expand navbar-dark bg-dark">
  <div class="container">
  <div class="collapse navbar-collapse" id="mynavbar">

    <select class="form-control me-2" name="motivoGastos" style="width: auto;">
      <% if(filtros.motivoGastos.id) { %>
        <option value="<%= filtros.motivoGastos.id %>|<%= filtros.motivoGastos.descricao %>" selected><%= filtros.motivoGastos.descricao %></option>
      <% }else { %>
        <option value="" disabled selected>Motivo</option>
      <% } %>   
      <% Motivos.forEach(m => { %>
        <option value="<%= m.id %>|<%= m.descricao %>"><%= m.descricao %></option>
      <% }); %>
    </select>
    
    <button class="btn btn-primary me-2" name="PESQUISAR" value="true">Pesquisar</button>
    
    <a href="/Menu" class="btn btn-primary me-2">Voltar</a>
    <a href="/Fatura" class="btn btn-warning me-2">Rezetar</a>
    <button class="btn btn-success me-2" name="PAGAR" value="true">Pagar Fatura</button>
  </div>
  </div>
  </nav>
</div>


<div class="container mt-3">
  <table class="table table-dark table-striped table-sm">
    <thead>
      <tr>  
        <th>Motivo</th>  
        <th>Valor</th> 
        <th>Parcela</th> 
        <th>Forma Pagamento</th> 
        <th>Conta Bancaria</th> 
        <th>Dt Registro</th> 
        <th>Dt Vencimento</th>
        <th>Situação</th>  
        <th></th> 
        <th></th> 
      </tr>
    </thead>
    <tbody>          
      <% GastosFatura.forEach(g => { %>
      <tr>
        <td><%= g.motivo %></td>  
        <td>$ <%= g.valor %></td>  
        <td><%= g.parcela %></td>  
        <td><%= g.formaPagamento %></td>  
        <td><%= g.conta %></td> 
        <td><%= g.dt_registro %></td>  
        <td><%= g.dt_vencimento %></td>

        <% if(g.situacao == 'PAGO') { %>
          <td style="color:rgb(0, 255, 0);"><%= g.situacao %></td>
        <% } else if(g.situacao == 'ATRASADO'){ %> 
          <td style="color:rgb(249, 224, 0);"><%= g.situacao %></td>
        <% } else if(g.situacao == 'ORCAMENTO'){ %> 
          <td style="color:rgb(0, 45, 248);"><%= g.situacao %></td>
        <% } else { %> 
          <td style="color:rgb(250, 0, 0);"><%= g.situacao %></td>
        <% } %> 
        </form>

        <form action="/Fatura/Pagar" method="post">

          <% if(g.inOrcamentario) { %>
            <td></td>
          <% } else if(g.situacao != 'PAGO' && !g.inFatura) { %> 
            <td></td>
          <% }else { %>
            <td></td>
          <% } %>
          <td><button name="DEL" value="<%= g.id %>|<%= g.valor %>" class="btn-sm form-control btn-danger">X</button></td> 
        </form>

      </tr>  
      <% }); %>             
    </tbody>
  </table>
</div>

</form>
</body>
</html>
