<!DOCTYPE html>
<html lang="PT-BR">
<head>
  <title>Motivo Gastos</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/styles.css">  
  <script src="/DLL.js"></script>
</head>
<body>

<div class="container mt-3">
  <h2>Motivo Gastos</h2>
 
  <div class="btn-group">
  <form action="/MotivoGastos/Click" method="post">
      <a href="/Carteira/ConsultaGastosResumoAnual" class="btn btn-success">Inicio</a>
      <button name="ADD" value="true" class="btn btn-primary">Adicionar</button>        
  </div>
</div>

<div class="container mt-3">

  <div class="btn-group">
    <input class="w3-input form-control" type="text" placeholder="Pesquisar Motivo" id="InputDescricao" onkeyup="buscaProdTabela(this,'myTable',0)">    
  </div>
<hr>
  <table class="table table-dark table-striped" style="width: auto;" id="myTable">
    <thead>
      <tr>       
        <th>Descrição</th>  
        <th></th>   
      </tr>
    </thead>
    <tbody> 
      <% Motivos.forEach(motivo => { %>
      <tr>
        <td><%= motivo.descricao %></td>
        <td><button name="EDI" value="<%= motivo.id %>|<%= motivo.descricao %>" class="form-control btn-warning">E</button></td>
      </tr>  
      <% }); %>     
    </tbody>
  </table>
</div>
</form>
</body>
</html>
