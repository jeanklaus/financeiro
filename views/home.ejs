<!DOCTYPE html>
<html lang="PT-BR">

<head>
  <title>Menu Principal</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css"> 
  <link rel="stylesheet" href="/styles.css">  
  <script src="/DLL.js"></script>
</head>

<body>

  <input type="hidden" id="prioridade">
  <div class="w3-sidebar w3-bar-block w3-light-grey w3-card" style="width:150px">
    <h5 class="w3-bar-item" style="color: rgb(0, 0, 0); text-shadow:2px 2px 2px rgb(49, 49, 50)"><%= global.user.nome %></h5>    
    <button class="w3-bar-item w3-button tablink" onclick="openMenu(event, 'Cadastro')">Cadastro</button>
    <button class="w3-bar-item w3-button tablink" onclick="openMenu(event, 'Gastos')">Gastos</button>
    <button class="w3-bar-item w3-button tablink" onclick="openMenu(event, 'Creditos')">Creditos</button>
    <button class="w3-bar-item w3-button tablink" onclick="openMenu(event, 'Fatura')">Fatura</button>
    <a href="/" class="w3-bar-item w3-button">Sair</a>
  </div>
 
  <div style="margin-left:150px">

    <div class="w3-container w3-cell">
      <div class="w3-padding">

        <div id="Cadastro" class="w3-container item" style="display:none;">         
          <button style="border: 0px;" class="transp row funcionalidades"><a href="/ContaBancaria" class="btn btn-dark">Contas Bancarias</a></button>  
          <button style="border: 0px;" class="transp row funcionalidades"><a href="/MotivoGastos" class="btn btn-dark">Motivo dos Gastos</a></button> 
          <button style="border: 0px;" class="transp row funcionalidades"><a href="/OrigemCredito" class="btn btn-dark">Origem dos Creditos</a></button>     
        </div>

        <div id="Gastos" class="w3-container item" style="display:none;">     
          <button style="border: 0px;" class="transp row funcionalidades"><a href="/Carteira/ConsultaGastosResumoAnual" class="btn btn-dark">Consulta Gastos - resumo anual</a></button>    
          <button style="border: 0px;" class="transp row funcionalidades"><a href="/Carteira/ConsultaGastos" class="btn btn-dark">Consulta Gastos</a></button>
          <button style="border: 0px;" class="transp row funcionalidades"><a href="/Carteira/RegistrarGastos" class="btn btn-dark">Registrar Gastos</a></button>
        </div>

        <div id="Creditos" class="w3-container item" style="display:none;"> 
          <button style="border: 0px;" class="transp row funcionalidades"><a href="/Carteira/ConsultaCreditos" class="btn btn-dark">Consulta Creditos</a></button>
          <button style="border: 0px;" class="transp row funcionalidades"><a href="/Carteira/RegistrarCreditos" class="btn btn-dark">Registrar Creditos</a></button>
        </div>

        <div id="Fatura" class="w3-container item" style="display:none;"> 
          <button style="border: 0px;" class="transp row funcionalidades"><a href="/Fatura" class="btn btn-dark">Consultar Faturas</a></button>                    
        </div>
        

      </div><!--END <div class="w3-padding"> -->
    </div><!--END <div class="w3-container w3-cell"> -->

    <div class="w3-container w3-cell">
      <% if(avisos.length > 0){ %>
          <% for(let aviso of avisos) { %>
          <div class="alert alert-danger alert-dismissible">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>            
              <strong>AVISO!</strong><%= aviso %>         
          </div>
          <% } %>
      <% } %>
    </div>

    <form action="/Carteira/DefinirSaldoUsuario" method="get">
    <div class="w3-display-topmiddle">
      <h1>
      <input id="ValorTotal"  style="text-shadow:1px 1px 2px rgb(96, 252, 0);width: 350px;" class="w3-input"
        type="text" value="Saldo: $ <%= global.user.saldo %>" readonly>
      </h1>
    <button class="form-control btn-primary" style="border: 0px;">Definir Saldo</button>
    </div>
  </form>
</body>
<script>
  function openMenu(evt, menuNome) 
  {
    var i, itens, tablinks;

    itens = document.getElementsByClassName("item");

    for (i = 0; i < itens.length; i++) 
    {
      itens[i].style.display = "none";
    }

    tablinks = document.getElementsByClassName("tablink");

    for (i = 0; i < itens.length; i++) 
    {
      tablinks[i].className = tablinks[i].className.replace(" w3-blue", "");
    }

    document.getElementById(menuNome).style.display = "block";
    evt.currentTarget.className += " w3-blue";
  }


</script>
</html>