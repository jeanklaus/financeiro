<!DOCTYPE html>
<html lang="PT-BR">

<head>
  <title>Menu Principal</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css"> 
  <link rel="stylesheet" href="/styles.css">  
  <script src="/DLL.js"></script>
</head>

<body>

  <input type="hidden" id="prioridade">
  <div class="w3-sidebar w3-bar-block w3-light-grey w3-card" style="width:150px">
    <h5 class="w3-bar-item" style="color: rgb(0, 0, 0); text-shadow:2px 2px 2px rgb(49, 49, 50)"><%= global.user.nome %></h5>    
    <button class="w3-bar-item w3-button tablink" onclick="openMenu(event, 'Cadastro')">Cadastro</button>

    <a href="/" class="w3-bar-item w3-button">Sair</a>
  </div>
 
  <div style="margin-left:150px">

    <div class="w3-container w3-cell">
      <div class="w3-padding">

        <div id="Cadastro" class="w3-container item" style="display:none;">         
          <button style="border: 0px;" class="transp row funcionalidades"><a href="/ContaBancaria" class="btn btn-dark">Contas Bancarias</a></button>  
          <button style="border: 0px;" class="transp row funcionalidades"><a href="/MotivoGastos" class="btn btn-dark">Motivo dos Gastos</a></button>      
        </div>

        

      </div><!--END <div class="w3-padding"> -->
    </div><!--END <div class="w3-container w3-cell"> -->

    <div class="w3-container w3-cell">
      <% if(avisos.length > 0){ %>
          <% for(let aviso of avisos) { %>
          <div class="alert alert-danger alert-dismissible">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            
              <strong>AVISO!</strong><%= aviso %>
         
          </div>
          <% } %>
      <% } %>
    </div>
</body>
<script>
  function openMenu(evt, menuNome) 
  {
    var i, itens, tablinks;

    itens = document.getElementsByClassName("item");

    for (i = 0; i < itens.length; i++) 
    {
      itens[i].style.display = "none";
    }

    tablinks = document.getElementsByClassName("tablink");

    for (i = 0; i < itens.length; i++) 
    {
      tablinks[i].className = tablinks[i].className.replace(" w3-blue", "");
    }

    document.getElementById(menuNome).style.display = "block";
    evt.currentTarget.className += " w3-blue";
  }


</script>
</html>