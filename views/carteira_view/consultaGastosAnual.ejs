<!DOCTYPE html>
<html lang="PT-BR">
<head>
  <title>Consulta</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/styles.css">  
  <script src="/DLL.js"></script>
</head>
<body>

  <div class="w3-container">
    
    <h1 class="w3-left">
      <input id="ValorTotal"  style="text-shadow:1px 1px 2px rgb(135, 128, 128);width: 250px;" class="w3-input"
        type="text" value="Resultado: $ <%= valorTotal.toFixed(2) %>" readonly>
    </h1>

    <h1 class="w3-left">
      <input id="ValorTotal"  style="text-shadow:1px 1px 2px rgb(96, 252, 0);width: 250px;" class="w3-input"
        type="text" value="Saldo: $ <%= global.user.saldo %>" readonly>
    </h1>

    <h1 class="w3-left">
      <input id="ValorTotal"  style="text-shadow:1px 1px 2px rgb(238, 3, 3);width: 250px;" class="w3-input"
        type="text" value="Devendo: $ <%= valorTotalPendente.toFixed(2) %>" readonly>
    </h1>

    <h1 class="w3-left">
      <input id="ValorTotal"  style="text-shadow:1px 1px 2px rgb(37, 0, 248);width: 250px;" class="w3-input"
        type="text" value="Pendente: $ <%= valorTotalPendenteRecebimento.toFixed(2) %>" readonly>
    </h1>

    <h1 class="w3-left">
      <input id="ValorTotal"  style="text-shadow:1px 1px 2px rgb(182, 236, 3);width: 250px;" class="w3-input"
        type="text" value="Estimativa: $ <%= valorTotalEstimativa %>" readonly>
    </h1>    
  </div>
  
  <form class="" action="/Carteira/ConsultandoGastosResumoAnual" method="POST">
  <div class="container w3-left">
    <nav class="navbar navbar-expand navbar-dark bg-dark">
    <div class="container">
    <div class="collapse navbar-collapse" id="mynavbar">
        <input id="data" name="ano" class="form-control me-2" type="number" placeholder="YYYY" min="2022" max="2100" value="<%= anoSelect %>">
        <button class="btn btn-primary me-2" name="PESQUISAR" value="true">Pesquisar</button>
        <a href="/Menu" class="btn btn-primary me-2">Voltar</a>
    </div>
    </div>
    </nav>
  </div>
</form>
  <div class="container w3-left">
 
    <div class="container mt-3">
      <table class="table table-dark table-striped table-sm" id="">
        <thead>
          <tr>  
            <th></th>     
            <th>Janeiro</th>  
            <th>Fevereiro</th> 
            <th>Mar√ßo</th> 
            <th>Abril</th> 
            <th>Maio</th> 
            <th>Junho</th> 
            <th>Julho</th>
            <th>Agosto</th>  
            <th>Setembro</th> 
            <th>Outubro</th>
            <th>Novembro</th>
            <th>Dezembro</th>
          </tr>
        </thead>
        <tbody>  
          <% resumo.forEach(dado => { %>
            <%  if(dado.ano == anoSelect) { %>           
            <tr>
              <td><%= dado.motivo %></td>
              <td><%= dado.janeiro %></td>
              <td><%= dado.fevereiro %></td>
              <td><%= dado.marco %></td>
              <td><%= dado.abril %></td>
              <td><%= dado.maio %></td>
              <td><%= dado.junho %></td>
              <td><%= dado.julho %></td>
              <td><%= dado.agosto %></td>
              <td><%= dado.setembro %></td>
              <td><%= dado.outubro %></td>
              <td><%= dado.novembro %></td>
              <td><%= dado.dezembro %></td>
            </tr> 
            <% } %>  
          <% }); %> 
          <tr>
            <td>-</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr> 
          <tr>
            <td style="color:red ;">TOTAL</td>
            <td style="color:red ;"><%= totais.janeiro %></td>
            <td style="color:red ;"><%= totais.fevereiro %></td>
            <td style="color:red ;"><%= totais.marco %></td>
            <td style="color:red ;"><%= totais.abril %></td>
            <td style="color:red ;"><%= totais.maio %></td>
            <td style="color:red ;"><%= totais.junho %></td>
            <td style="color:red ;"><%= totais.julho %></td>
            <td style="color:red ;"><%= totais.agosto %></td>
            <td style="color:red ;"><%= totais.setembro %></td>
            <td style="color:red ;"><%= totais.outubro %></td>
            <td style="color:red ;"><%= totais.novembro %></td>
            <td style="color:red ;"><%= totais.dezembro %></td>
          </tr> 
        </tbody>
      </table>
    </div>
  </div>


</body>
</html>
