<!DOCTYPE html>
<html lang="PT-BR">
<head>
  <title>Origem Credito</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/styles.css">  
</head>
<body>

<div class="container mt-3">
  <h2>Origem Credito</h2>
  <hr>
  <div class="btn-group">
  <form action="/OrigemCredito/Click" method="post">
      <a href="/Menu" class="btn btn-success">Inicio</a>
      <button name="ADD" value="true" class="btn btn-primary">Adicionar</button>        
  </div>
</div>

<div class="container mt-3">
  <table class="table table-dark table-striped" style="width: auto;" >
    <thead>
      <tr>       
        <th>Descrição</th>  
        <th></th>   
      </tr>
    </thead>
    <tbody> 
      <% Origens.forEach(origem => { %>
      <tr>
        <td><%= origem.descricao %></td>
        <td><button name="EDI" value="<%= origem.id %>|<%= origem.descricao %>" class="form-control btn-warning">E</button></td>
      </tr>  
      <% }); %>     
    </tbody>
  </table>
</div>
</form>
</body>
</html>
